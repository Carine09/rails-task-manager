<h1>My Task</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
    <p> <%= link_to "Delete", destroy_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%> </p>
  <% end %>
</ul>

<p> <%= link_to "Add a new task", new_task_path %> </p>
